<% include ./partials/header.ejs %>

<!-- Main content container -->
<div class="w-full min-h-screen px-10 py-5 bg-zinc-800 text-white">
    <!-- Section heading -->
    <h1 class="text-xl">Create a new post.</h1>
    <hr class="opacity-10 mt-3">

    <!-- Form for creating a new post -->
    <form action="/createpost" method="post" enctype="multipart/form-data">
        <!-- File input for post image -->
        <input class="block w-1/3 px-3 py-2" type="file" name="postimage">

        <!-- Text input for post title -->
        <input class="text-black block w-1/3 px-3 py-2 rounded-md border-2 mt-2" type="text" placeholder="Title" name="title">

        <!-- Textarea input for post description -->
        <textarea class="text-black block w-1/3 h-60 px-3 py-2 rounded-md border-2 mt-2" type="text" placeholder="Description" name="description"></textarea>

        <!-- Submit button for creating the post -->
        <input class="block w-1/3 px-3 py-2 bg-red-700 mt-2 rounded-full" type="submit" value="Create Post">
    </form>
</div>

<!-- Include footer partial -->
<% include ./partials/footer.ejs %>
