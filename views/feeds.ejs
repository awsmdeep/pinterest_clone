<% include ./partials/header.ejs %>

<!-- Main content container -->
<div class="w-full min-h-screen bg-zinc-800 px-10 py-8 text-white">
    <!-- Container for displaying post cards -->
    <div class="cards flex flex-wrap gap-10">
        <!-- Loop through each post in the 'posts' array -->
        <% posts.forEach(function(elem){ %>
            <!-- Individual post card -->
            <div class="card w-32">
                <!-- Post image container -->
                <div class="w-full h-40 bg-zinc-700 rounded-lg overflow-hidden">
                    <!-- Post image -->
                    <img class="w-full h-full object-cover" src="/images/uploads/<%= elem.image %>" alt="">
                </div>
                <!-- Post title -->
                <h5 class="mt-2 text-sm"><%= elem.title %></h5>
            </div>
        <% }) %>
    </div>
</div>

<!-- Include footer partial -->
<% include ./partials/footer.ejs %>
