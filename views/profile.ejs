<% include ./partials/header.ejs %>

<!-- Profile page container -->
<div class="profile w-full min-h-screen bg-zinc-800 text-white pt-1">

    <!-- Form for uploading profile image -->
    <form id="uploadform" hidden action="/fileupload" method="post" enctype="multipart/form-data">
        <input type="file" name="image" id="">
    </form>

    <!-- User profile details container -->
    <div class="profdet flex flex-col items-center mt-10">

        <!-- Profile image container with edit icon -->
        <div class="relative">
            <span id="uploadicon" class="w-8 h-8 absolute bottom-0 right-0 rounded-full flex justify-center items-center bg-white">
                <i class="text-zinc-800 ri-pencil-fill"></i>
            </span>
            <div class="w-32 h-32 bg-zinc-200 rounded-full overflow-hidden">
                <!-- User profile image -->
                <img class="w-full h-full object-cover" src="/images/uploads/<%= user.profileImage %>" alt="">
            </div>
        </div>

        <!-- User name and username -->
        <h1 class="text-3xl font-semibold mt-5"><%= user.name %></h1>
        <h3 class="text-md">@<%= user.username %></h3>

        <!-- Edit and Add New Pin buttons -->
        <a href="/edit" class="mt-5 px-7 py-2 bg-zinc-700 rounded-full">Edit</a>
        <a href="/add" class="bg-red-700 rounded-lg px-10 py-2 font-semibold mt-5">Add New Pin</a>
    </div>

    <!-- User's uploaded pins container -->
    <div class="cards flex flex-wrap gap-10 mt-10 px-10">
        <!-- Display the first uploaded pin -->
        <div>
            <div class="w-52 h-40 bg-zinc-200 rounded-lg overflow-hidden">
                <!-- Uploaded pin image -->
                <img class="w-full h-full object-cover" src="/images/uploads/<%= user?.posts[0]?.image %>" alt="">
            </div>
            <!-- Link to user's uploaded pins and pin count -->
            <a href="/show/posts" class="text-xl font-semibold mt-3 inline-block">Your Upload Pins</a>
            <h5 class="text-sm font-medium opacity-60"><%= user.posts.length %> Pins</h5>
        </div>
    </div>
</div>

<!-- JavaScript to handle profile image upload -->
<script>
    document.querySelector("#uploadicon").addEventListener("click", function () {
        document.querySelector("#uploadform input").click();
    })

    document.querySelector("#uploadform input").addEventListener("change", function () {
        document.querySelector("#uploadform").submit();
    })
</script>

<!-- Include footer partial -->
<% include ./partials/footer.ejs %>
